<h2>Add new post</h2>
<%= form_for :post, url: posts_path do |f| %>
  <!-- Validation, Show errors to user -->
  <% if @post.errors.any? %> <!-- If there are any errors in the post -->
    <% @post.errors.full_messages.each do |msg| %> <!-- Show them all -->
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>

  <!-- Add post form -->
  <p>
    Title<br>
    <%= f.text_field(:title, {:class => 'form-control'}) %>
  </p>

  <p>
    Text area<br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>

  <p>
    <%= f.submit({:class => 'btn btn-success'}) %>
  </p>
<% end %>
